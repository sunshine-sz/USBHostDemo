<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.sunshine.usbdemo.MainActivity">

    <Button
        android:id="@+id/btn_check_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检测设备" />


    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取Token"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_open_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开锁" />

    <Button
        android:id="@+id/btn_open_battery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启电池仓" />

    <Button
        android:id="@+id/btn_close_battery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关闭电池仓" />


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btn_check_device"
        android:text="扫码上报" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_submit"
                android:padding="10dp"
                android:text="设备信息:"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info"
                android:padding="10dp"
                android:text="监听数据:"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
